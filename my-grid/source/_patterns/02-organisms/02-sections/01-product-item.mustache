<ul class="product-grid">
	<li class="product-grid__item">
		<section class="item">
		  <img src="{{img.product-image.src}}" title=" {{img.product-image.title}}" class="product-image">
		  <ul class="item-color-list">
		    <li class="color-swatch">
		      <img src="{{img.color-swatch-1.src}}" title="{{img.color-swatch-1.title}}">
		    </li>
		    <li class="color-swatch">
		      <img src="{{img.color-swatch-2.src}}" title="{{img.color-swatch-2.src}}">
		    </li>
		    <li class="color-swatch">
		      <img src="{{img.color-swatch-3.src}}" title="{{img.color-swatch-3.title}}" class="is-active">
		    </li>
		    <li class="color-swatch">
		      <img src="{{img.color-swatch-4.src}}" title="{{img.color-swatch-4.title}}">
		    </li>
		    <li class="color-swatch">
		      <img src="{{img.color-swatch-5.src}}" title="{{img.color-swatch-5.title}}">
		    </li>
		  </ul>
		  <a href="#" class="product-title">{{product-title.short}}</a>
		  <span class="price">{{price}}</span>
		</section>
	</li>
</ul>